@model IEnumerable<Product>

    <section>
    <h3 class="bg-primary text-center text-black">Closes</h3>
    <div class="container">
        <div class="row" style="display:flex; justify-content:center;">
           
            @foreach (Product p in Model)
            {
                if(p.IsMan == true)
                {
                     <div class="col-lg-3 col-md-4 col-sm-12 mb-3">
                    <a asp-controller = "Home" asp-action = "Details" asp-route-id = "@p.ProductId" style = "align-self: center;  text-decoration: none;">
                        <img src="~/images/@(p.Name).webp" class="img-fluid" style="width:auto;height:320px;" />
                        <h4 class="text-center">@p.Name</h4>
                        <h4 class = "text-center">@p.Price.ToString("c")</h4>
                    </a>
                    </div>
                }
                else
                {
                     <div class="col-lg-3 col-md-4 col-sm-12 mb-3">
                    <a asp-controller = "Home" asp-action = "Details" asp-route-id  = "@p.ProductId" style = "align-self: center;  text-decoration: none;">
                        <img src="~/images/Woman/@(p.Name).webp" class="img-fluid" style="width:auto;height:320px;" />
                        <h4 class="text-center">@p.Name</h4>
                        <h4 class = "text-center">@p.Price.ToString("c")</h4>
                    </a>
                </div>
                }
               
            }
        </div>
    </div>
</section>