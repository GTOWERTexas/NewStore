@model Product

<div class = "container">
    
    <div class = "row">
        <div class = "col-lg-6 col-md-6 col-sm-12">
            <form asp-action = "Details" method = "get"> 
    
          <div class = "form-group">
                <label asp-for = "Name"></label>
                <input class = "form-control col-md-6" asp-for = "Name" readonly/>
          </div>

           <div class = "form-group">
                <label asp-for = "Price"></label>
                 <input class = "form-control col-md-6" asp-for = "Price" readonly/>
          </div>

            <div class = "form-group">
                 <label asp-for = "Composition"></label>
                <input class = "form-control col-md-6" asp-for = "Composition" readonly/>
          </div>

            <div class = "form-group">
                 <label asp-for = "Size"></label>
                <input class = "form-control col-md-6" asp-for = "Size" readonly/>
          </div>

            <div class = "form-group">
                 <label asp-for = "Country"></label>
                <input class = "form-control col-md-6" asp-for = "Country" readonly/>
          </div>
    
           <div class = "form-group">
                <label asp-for = "Category"></label>
               <input class = "form-control col-md-6" asp-for = "Category.Name" readonly/>
          </div>


  
           </form>
        </div>
        <div class = "col-lg-6 col-md-6 col-sm-12">
            @if(Model.IsMan == true)
            {
                <img src="~/images/@(Model.Name).webp" class="img-fluid" style="width:auto;height:320px;" />
            }
            else
            {
                 <img src="~/images/Woman/@(Model.Name).webp" class="img-fluid" style="width:auto;height:320px;" />
            }
            
        </div>
    </div>
    <div class = "row" style = "margin-top: 3px">
        <div class = "col-lg-6 col-md-6 col-col-sm-12">
           <form id = "@Model.ProductId" asp-page = "/Cart" method = "post">
           <input type = "hidden" asp-for = "ProductId"></input>
           <input type = "hidden" name = "returnUrl" value = "@ViewContext.HttpContext.Request.PathEndQuery()"></input>
           <span class = "card-text p-1">
               <button type = "submit" class = "btn btn-dark btn-sm pull-right">
                   Add To Cart
               </button>
           </span>
            @if (User.IsInRole("Admins"))
                {
                   <a href = "/admin/products/edit/@Model.ProductId" class = "btn btn-primary">Edit</a>
                }

           </form>
        </div>
    </div>


</div>